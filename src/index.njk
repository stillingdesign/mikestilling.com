                    {# Tools #}
                    <div class="flex flex:col sm:max-w:320 md:max-w:384">
                        <h3 class="bold mb:24">
                            Tool belt:
                        </h3>
                        <ul class="flex flex:wrap gap:6 sm:max-w:384">
                            {% macro toolItem(tool) %}
                                <li class="border:1 border:white border-opacity:15 font:xs uppercase tracking:loosest radius:sm leading:100 pt:6 pb:4 px:6 color:ink-1-i">
                                    {{ tool }}
                                </li>
                            {% endmacro %}
                            {{toolItem('Figma')}}
                            {{toolItem('Photoshop')}}
                            {{toolItem('Illlustrator')}}
                            {{toolItem('After Effects')}}
                            {{toolItem('Blender')}}
                            {{toolItem('CSS')}}
                            {{toolItem('HTML')}}
                            {{toolItem('Javascript')}}
                            {{toolItem('Greensock')}}
                            {{toolItem('NodeJS')}}
                            {{toolItem('Github')}}
                            {{toolItem('VSCode')}}
                            {{toolItem('Analytics')}}
                            {{toolItem('Contentful')}}
                            {{toolItem('Hubspot')}}
                        </ul>
                    </div>
                    {# Values #}
                    <div class="flex flex:col w:100p">
                        <h3 class="bold mb:24">
                            Values:
                        </h3>
                        <ul class="flex justify-content:between sm:justify-content:start col-gap:14 row-gap:28 md:row-gap:28 md:col-gap:28 flex:wrap">
                            {% macro valueItem(head, desc) %}
                                <li class="w:100p max-w:154 md:max-w:192">
                                    <h4 class="md:font:lg font:serif">
                                        {{ head | safe }}
                                    </h4>
                                    <p class="font:sm md:font:md opacity:70">
                                        {{ desc | safe }}
                                    </p>
                                </li>
                            {% endmacro %}
                            {{ valueItem(
                                head='Transparency',
                                desc='Sharing early and often <span class="space:nowrap">to prevent</span> snags later on.'
                            )}}
                            {{ valueItem(
                                head='Shipping often',
                                desc='Great enough leads to <span class="space:nowrap">better results</span> than perfect.'
                            )}}
                            {{ valueItem(
                                head='Focus',
                                desc='Doing the right work vs. <span class="space:nowrap">lots of</span> low-impact work.'
                            )}}
                            {{ valueItem(
                                head='DIY-culture',
                                desc='Working with people <span class="space:nowrap">who like</span> to make > plan.'
                            )}}
                        </ul>
                    </div>
                </div>
                {# Col 2 #}
                <ul class="relative w:100p sm:w:50minus14 flex-shrink:0 transform md:translate-y:12 border-t:1 border:white border-opacity:10 sm:mt:n64 md:mt:n96 mb:48 sm:mb:0">
                    {% macro job(icon, head, role, date, desc) %}
                        <li data-accordion class="relative w:100p border-b:1 border:white border-opacity:10">
                            <button data-accordion-button aria-controls="accordion-{{ head | slugify }}" aria-expanded="false" type="button" class="relative w:100p flex justify-content:between align-items:center py:20 md:py:24 text:left leading:100 opacity:75 transition:200">
                                <div data-job-title class="flex align-items:center gap:8 sm:gap:16 lg:gap:24">
                                    {{ icon }}
                                    <h3 class="font:xl sm:font:3xl">
                                        {{ head }}
                                    </h3>
                                </div>
                                <div class="flex align-items:center gap:16 lg:gap:48 font:xs md:font:sm lg:font:md">
                                    <p class=" sm:hidden md:block opacity:70 w:112 lg:w:128">
                                        {{ role }}
                                    </p>
                                    <p class="hidden sm:block opacity:70 sm:w:64 md:w:72">
                                        {{ date }}
                                    </p>
                                    <div data-accordion-carat class="w:28 h:28 radius:full border:1 border:white border-opacity:30 flex align-items:center justify-content:center">
                                        {{ icons.chevDown('w:16 mt:2')}}
                                    </div>
                                </div>
                            </button>
                            <div data-accordion-content id="accordion-{{ head | slugify }}" class="relative overflow:hidden" style="height:0; opacity:0; visibility:hidden;">
                                <p class="font:md md:font:lg lg:font:lg opacity:70 pb:20 md:pb:24">
                                    {{ desc | safe }}
                                </p>
                            </div>
                        </li>
                    {% endmacro %}
                    {{ job(
                        icon=icons.customerRewatchIcon('w:20 sm:w:28 flex-shrink:0'),
                        head='Rewatch',
                        role='Sr. Web Designer',
                        date='1.75 years',
                        desc='As the first and only designer on the marketing side of things, Mike designs and builds anything marketing related—from ads to the <span class="space:nowrap">marketing site.</span>'
                    )}}
                    {{ job(
                        icon=icons.customerFirehydrantIcon('w:20 sm:w:28 flex-shrink:0'),
