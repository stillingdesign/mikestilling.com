{% import "components/_icons.njk" as icons %}

<main>
    
    {# Hero #}
    <section data-home-hero class="section">
        <div class="container pt:112 sm:pt:144 md:pt:192 pb:48 sm:pb:80 md:pb:96 flex flex:col gap:48 sm:gap:64 md:gap:96">
            {# Content #}
            <div class="relative flex flex:col md:flex:row align-items:center md:align-items:end md:justify-content:between text:center md:text:left">
                <h1 data-headline class="font:serif font:12vw sm:font:12xl md:font:8vw lg:font:12xl leading:110 mb:12 md:mb:0 tracking:tight">
                    Design-led growth <span class="space:nowrap">for SaaS companies</span>
                </h1>
                <p data-subhead class="font:7vw sm:font:4xl md:font:2-5vw lg:font:4xl opacity:70 leading:130 md:mb:14 lg:mb:16 tracking:tight">
                    Brands, campaigns, and<br class="hidden md:block"/> <span class="space:nowrap sm:space:normal md:space:nowrap">websites that drive revenue.</span>
                </p>
            </div>
            {# Graphics #}
            <div class="relative w:100p flex flex:col md:flex:row-reverse justify-content:between">
                {# Image #}
                <div class="relative z:2 flex align-items:center justify-content:center w:100p md:w:10-12 ratio:1-1 sm:ratio:16-9 bg:sheet-4-i mb:16 md:mb:0 overflow:hidden">
                    <img
                        data-home-hero-img
                        src="/assets/images/graphics/home-hero.webp"
                        alt="Mike, Kerry, and the dogs"
                        width="1920" height="1920"
                        class="absolute top:0 w:100p h:auto max-w:none"
                    />
                    <div data-reveal class="absolute top:n2 left:n2 w:plus4 h:plus4 transform transform:top bg:sheet-6-i"></div>
                </div>
                {# Caption #}
                <div class"relative">
                    <div data-dash class="hidden md:block w:24 h:1 bg:primary-rg mb:16"></div>
                    <div class="flex gap:8 md:block leading:140 opacity:70 font:xs sm:font:sm justify-content:center sm:justify-content:start">
                        <p data-caption>Mike and family</p>
                        <span class="md:hidden">·</span>
                        <p data-caption>On the road, WI</p>
                        <span class="md:hidden">·</span>
                        <p data-caption class="italic">Sometime 2021</p>
                    </div>
                </divn>
            </div>
        </div>
    </section>

    {# Intro #}
    <section class="section">
        <div class="container flex flex:col align-items:center sm:gap:80">
            {# Headline #}
            <h2 data-intro class="w:plus16 sm:w:100p sm:max-w:640 md:max-w:none md:w:8-12 font:5-5vw sm:font:6xl md:font:3-75vw lg:font:7xl sm:tracking:tight pb:24 sm:pb:0 border-b:1 border:white border-opacity:10 sm:border-b:0 border:dashed">
                Mike has been designing, developing, and strategizing for brands across an array of industries for over eight years.
            </h2>
            {# List #}
            <ul class="w:100p flex flex:col sm:flex:row sm:gap:28 justify-content:between font:5-5vw sm:font:md md:font:xl">
                {% macro overviewItem(head, desc) %}
                    <li class="w:100p sm:max-w:256 md:max-w:304 py:24 border-b:1 border:white border-opacity:10 sm:border-b:0 border:dashed">
                        <h3 data-intro class="inline bold">
                            {{ head | safe }}
                        </h3>
                        <p data-intro class="inline opacity:70">
                            {{ desc | safe }}
                        </p>
                    </li>
                {% endmacro %}
                {{ overviewItem(
                    head='Designer.',
                    desc='Trained in graphic design, with experience designing almost anything <span class="space:nowrap">in every medium.</span>'
                )}}
                {{ overviewItem(
                    head="Developer.",
                    desc='Builds marketing sites, from scratch, at the speed of light, <span class="space:nowrap">that perform</span> well <span class="space:nowrap">and look nice.</span>'
                )}}
                {{ overviewItem(
                    head='Strategy.',
                    desc='Plans, shapes, and refines projects that play to team strengths and deliver <span class="space:nowrap"><span class="md:hidden lg:inline">impactful</span> results.</span>'
                )}}
            </ul>
        </div>
    </section>

    {# Case Studies #}
